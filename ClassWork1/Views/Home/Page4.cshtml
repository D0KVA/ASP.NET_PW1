@{
    ViewData["Title"] = "Корзина";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p>Типо корзина</p>

        <div class="card">
            <img src="https://via.placeholder.com/200" class="card-img-top" alt="Пример изображения">
            <div class="card-body">
                <h5 class="card-title">Название товара</h5>
                <p class="card-text">Описание товара. Здесь вы можете добавить больше информации о продукте.</p>
                <a href="#" class="btn btn-primary">Добавить в корзину</a>
            </div>
        </div>

        <ul>
            <li>Элемент 1</li>
            <li>Элемент 2</li>
            <li>Элемент 3</li>
        </ul>
    </div>
</body>
</html>